         "name": "Product",
         "settings": [
         {
           "type": "header",
           "content": "Main Product Image"
         },
         {
           "type": "image_picker",
           "id": "img_main",
           "label": "Background Product Image",
           "info": "JPG, and recommended size is 1160 x 580"
         },
         {
           "type": "image_picker",
           "id": "img_mobile",
           "label": "Background Product Image",
           "info": "JPG, and recommended size is 375 x 580"
         },
            {
                 "type": "header",
                 "content": "Product Details"
             },
             {
               "type": "select",
               "id": "left_or_right",
               "label": "Text Left or Right",
               "options": [
                 {
                   "value": "left",
                   "label": "Left"
                 },
                 {
                   "value": "right",
                   "label": "Right"
                 }
                ],
               "default": "left"
             },
             {
               "type": "text",
               "id": "product_id_name",
               "label": "Product Id",
               "info": "No Spaces. i.e foam-cleanser",
               "default": "foam-cleanser"
             },
             {
                 "type": "text",
                 "id": "product_name",
                 "label": "Product Name"
             },
             {
               "type": "textarea",
               "id": "product_description",
               "label": "Product Description"
             },
             {
               "type": "select",
               "id": "card_style",
               "label": "Text Card Style",
               "options": [
                 {
                   "value": "no_bg",
                   "label": "Transparent Background"
                 },
                 {
                   "value": "half_transparent",
                   "label": "Half Transparent Background"
                 },
                 {
                   "value": "white_bg",
                   "label": "White Background"
                 }
               ],
               "default": "white_bg"
             },
             {
               "type": "header",
               "content": "Product Button"
             },
             {
               "type": "text",
               "id": "button_text",
               "label": "Button Text",
               "default": "View Product",
               "info": "Leave blank to hide button"
             },
             {
               "type": "url",
               "id": "button_link",
               "label": "Button Link"
             }
        ]
       }
    ],
    "presets":[
        {
            "name": "Product Details Left",
            "category": "10. Product Section"
        }
    ]
  }
{% endschema %}

