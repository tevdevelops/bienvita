

<div class="product-area" id="product-area-{{ section.id }}">
  
    
{% for collection in collections %}
  {% unless collection.handle == 'frontpage' %}
  {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
  <div class="container {% unless forloop.last %}pb-50{% endunless %}">
    <div class="product-top-bar section-border mb-35">
      <div class="section-title-wrap">
        <h3 class="section-title section-bg-white">{{ collection_title }}</h3>
        <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">&rsaquo;</a>
      </div>
    </div>
    <div class="featured-product-active hot-flower owl-carousel product-nav">
       {% for product in collection.products %}
        {% assign grid_item_width = 'large--one-fifth medium--one-half' %}
      {% include 'product-grid-item' %}
      {% endfor %}
    </div>
  </div>
  {% endunless %}
  {% endfor %}
  
</div>



<style>
 
 #product-area-{{ section.id }}.product-area{
    padding-top:{{ section.settings.section_padding_top }}px;
  }
  
 #product-area-{{ section.id }}.product-area{
    padding-bottom:{{ section.settings.section_padding_bottom }}px;
  }
  
  
</style> 

<script>

  /* Best selling active */
    $('#product-area-{{ section.id }} .featured-product-active').owlCarousel({
        loop: true,
        nav: true,
        autoplay: false,
        autoplayTimeout: 5000,
        navText: ['<i class="ion-ios-arrow-back"></i>', '<i class="ion-ios-arrow-forward"></i>'],
        item: {{ section.settings.list_product_cursole }},
        margin: 30,
        responsive: {
            0: {
                items: 1
            },
            576: {
                items: 2
            },
            768: {
                items: 3
            },
            992: {
                items: 3
            },
            1100: {
                items:  {{ section.settings.list_product_cursole }}
            },
            1200: {
                items: {{ section.settings.list_product_cursole }}
            }
        }
    })
    

</script>



