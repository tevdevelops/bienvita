

<div class="banner-area" id="banner-area-{{ section.id }}">
  <div class="container">
    <div class="banner-wrap">
      <div class="row">

        {% for block in section.blocks %}
        <div class="col-lg-{{ block.settings.multiple_banner_coloum }} col-md-6 col-12">
          <div class="single-banner img-zoom mb-30">
            <a href="{{ block.settings.banner_img_url }}">
              <img src="{% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/620x300{% endif %}" alt="banner">
            </a>
            <div class="banner-content">
              <h4>{{ block.settings.banner_title }}</h4>
              <a href="{{ block.settings.banner_button_url }}">{{ block.settings.banner_button }}</a>
            </div>
          </div>
        </div>
        {% endfor %}

      </div>
    </div>
  </div>
</div>



<style>
 
 #banner-area-{{ section.id }}.banner-area{
    margin-top:{{ section.settings.section_margin_top }}px;
  }
  
  #banner-area-{{ section.id }}.banner-area{
    margin-bottom:{{ section.settings.section_margin_bottom }}px;
  }
  
  
  #banner-area-{{ section.id }} .banner-wrap {
    margin-top: {{ section.settings.section_margin_top_2 }}px;
}
  
</style> 





{% schema %}
  {
    "name": "Banner",
    "settings": [
		{
            "type": "header",
            "content": "Section Margin"
        },
        {
            "type": "text",
            "id": "section_margin_top",
            "label": "Section Margin Top",
            "default": "0" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        },
        {
            "type": "text",
            "id": "section_margin_bottom",
            "label": "Section Margin Bottom",
            "default": "0" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        },
		{
            "type": "header",
            "content": "Banner Wraper Margin"
        },
        {
            "type": "text",
            "id": "section_margin_top_2",
            "label": "Section Margin Top",
            "default": "-75" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        }
	],		
	"blocks":[
      {
         "type": "banner",
         "name": "Banner",
         "settings": [
			{
				"type": "text",
				"id": "multiple_banner_coloum",
				"label": "Banner Coloum",
                "default": "4",
                "info": "Follow Bootstrap Column"
			},
			{
				"type": "image_picker",
				"id": "banner_img",
				"label": "Image",
				"info": "Recommended Size: 620 x 300px"
		    },
			{
				"type": "url",
				"id": "banner_img_url",
				"label": "URL"
		    },
			{
                "type": "header",
                "content": "Banner Content"
            },
            {
              "type": "text",
              "id": "banner_title",
              "label": "Banner Title",
              "default": "Camellias"
            },
            {
              "type": "text",
              "id": "banner_button",
              "label": "Button",
              "default": "shop Now"
            },
            {
              "type": "url",
              "id": "banner_button_url",
              "label": "URL"
            }
        ]
       }
    ],
    "presets":[
        {
            "name": "Banner",
            "category": "2. banner"
        }
    ]
  }
{% endschema %}

