



<div class="contact-us" id="contact-us-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-2">

      </div>
      <div class="col-8">
        <div class="contact-page-title mb-40">
          <h1>{{ section.settings.contact_title }}</h1>
        </div>
      </div>
      <div class="col-2">

      </div>
    </div>
    <div class="row">
      <!-- <div class="col-lg-4">
        <ul class="contact-tab-list nav">
          <li><a class="active" href="#contact-address" data-toggle="tab">{{ section.settings.contact_us_title }}</a></li>
          <li><a  href="#contact-form-tab" data-toggle="tab">{{ section.settings.contact_form_title }}</a></li>
        </ul>
      </div> -->
      <div class="col-2">

      </div>
      <div class="col-lg-8 col-md-8">
        <div class="tab-content tab-content-contact">

          <div id="" class="tab-pane fade row d-flex active show" style="margin-bottom:60px;">
            <div class="col-lg-4 col-md-4">
              <div class="contact-information">
                <h4>{{ section.settings.address_title }}</h4>
                <p>{{ section.settings.address_description }}</p>
              </div>
            </div>
            <div class="col-lg-4 col-md-4">
              <div class="contact-information contact-mrg">
                <h4>{{ section.settings.phone_title }}</h4>
                <p>
                  <a href="tel:01234567890">{{ section.settings.phone_description }}</a>
                  <a href="tel:01234567891">{{ section.settings.phone_description_2 }}</a>
                </p>
              </div>
            </div>
            <div class="col-lg-4 col-md-4">
              <div class="contact-information contact-mrg">
                <h4>{{ section.settings.web_title }}</h4>
                <p>
                  <a href="mailto:info@example.com">{{ section.settings.web_description }}</a>
                  <a href="#">{{ section.settings.web_description_2 }}</a>
                </p>
              </div>
            </div>
          </div>

          <div id="" class="tab-pane fade row d-flex active show">
            <div class="col">
              {% include 'contact-form' %}
            </div>
          </div>


        </div>
      </div>
      <div class="col-2">

      </div>
    </div>
  </div>
</div>



<style>

 #contact-us-{{ section.id }}.contact-us{
    padding-top:{{ section.settings.section_padding_top }}px;
  }

 #contact-us-{{ section.id }}.contact-us{
    padding-bottom:{{ section.settings.section_padding_bottom }}px;
  }


</style>


