<div class="media-content">


  <div class="container">

    <div id="carouselExampleControls" class="carousel slide footer-desktop-hide" data-ride="carousel">
      <div class="carousel-inner">

        {% for block in section.blocks %}
        <div class="carousel-item {{block.settings.media_active}}">
          <div class="card text-center">
            <a href="{{block.settings.media_img_url}}">
              <img src="{% if block.settings.media_img %}{{ block.settings.media_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/620x300{% endif %}" alt="">
              <h4>{{block.settings.media_title}}</h4>
            </a>
          </div>
        </div>
        {% endfor %}

      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>


    <div class="row footer-mobile-hide">

      {% for block in section.blocks %}
      <div class="col-md-{{block.settings.multiple_media_column}}">
        <div class="card text-center">
          <a href="{{block.settings.media_img_url}}">
            <img src="{% if block.settings.media_img %}{{ block.settings.media_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/620x300{% endif %}" alt="">
            <h4>{{block.settings.media_title}}</h4>
          </a>
        </div>
      </div>
      {% endfor %}

    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Media Content",
    "settings": [
		{
            "type": "header",
            "content": "Section Margin"
        },
        {
            "type": "text",
            "id": "section_margin_top",
            "label": "Section Margin Top",
            "default": "0" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        },
        {
            "type": "text",
            "id": "section_margin_bottom",
            "label": "Section Margin Bottom",
            "default": "0" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        },
		{
            "type": "header",
            "content": "Media Wraper Margin"
        },
        {
            "type": "text",
            "id": "section_margin_top_2",
            "label": "Section Margin Top",
            "default": "-75" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        }
	],
	"blocks":[
      {
         "type": "media",
         "name": "Media",
         "settings": [
			{
				"type": "text",
				"id": "multiple_media_column",
				"label": "Media Column",
                "default": "4",
                "info": "Follow Bootstrap Column"
			},
      {
				"type": "text",
				"id": "media_active",
				"label": "Active Slide?",
                "info": "Only make one block active"
			},
			{
				"type": "image_picker",
				"id": "media_img",
				"label": "Image",
				"info": "Recommended Size: 800 x 535px"
		    },
			{
				"type": "url",
				"id": "media_img_url",
				"label": "URL"
		    },
			{
                "type": "header",
                "content": "Media Content"
            },
            {
              "type": "text",
              "id": "media_title",
              "label": "Media Title",
              "default": "Content Title"
            }
        ]
       }
    ],
    "presets":[
        {
            "name": "Media Content",
            "category": "6. Media"
        }
    ]
  }
{% endschema %}

