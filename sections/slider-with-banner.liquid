
<div class="slider-banner-area" id="slider-banner-area-{{ section.id }}">
  <div class="container">
    <div class="row">


      <div class="col-lg-4 col-md-4 order-2  mt-30-3 order-lg-1 order-md-1   order-xl-1">
        <div class="row">
          <div class="col-lg-12">
            <div class="single-banner img-zoom mb-30">
              <a href="{{ section.settings.banner_img_url }}">
                <img src="{% if section.settings.banner_img %}{{ section.settings.banner_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/620x300{% endif %}" alt="banner">
              </a>
              <div class="banner-content">
                <h4>{{ section.settings.banner_title }}</h4>
                <a href="{{ section.settings.banner_button_url }}">{{ section.settings.banner_button }}</a>
              </div>
            </div>
          </div>

          <div class="col-lg-12">
            <div class="single-banner img-zoom mb-30">
              <a href="{{ section.settings.banner_img_url_2 }}">
                <img src="{% if section.settings.banner_img_2 %}{{ section.settings.banner_img_2 | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/620x300{% endif %}" alt="banner">
              </a>
              <div class="banner-content">
                <h4>{{ section.settings.banner_title_2 }}</h4>
                <a href="{{ section.settings.banner_button_url_2 }}">{{ section.settings.banner_button_2 }}</a>
              </div>
            </div>
          </div>

          <div class="col-lg-12">
            <div class="single-banner img-zoom mb-30">
              <a href="{{ section.settings.banner_img_url_3 }}">
                <img src="{% if section.settings.banner_img_3 %}{{ section.settings.banner_img_3 | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/620x300{% endif %}" alt="banner">
              </a>
              <div class="banner-content">
                <h4>{{ section.settings.banner_title_3 }}</h4>
                <a href="{{ section.settings.banner_button_url_3 }}">{{ section.settings.banner_button_3 }}</a>
              </div>
            </div>
          </div>

        </div>
      </div>


      <div class="col-lg-8 col-md-8  order-1  order-lg-2  order-md-2   order-xl-2">

        <div class="slider-area slider-area-2">

          <div class="slider-active owl-dot-style owl-carousel">
            {% for block in section.blocks %}
            <div class="single-slider pt-140 pb-146 bg-img" style="background-image:url({% if block.settings.slider_img %}{{ block.settings.slider_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/1950x705{% endif %});">
              <div class="slider-content slider-animated-1 pl-30">
                <h3 class="animated">{{ block.settings.slider_subtitle }}</h3>
                <h1 class="animated">{{ block.settings.slider_title }}</h1>
                <h5 class="animated">{{ block.settings.slider_description }}</h5>
                <div class="slider-btn mt-45">
                  <a class="animated" href="{{ block.settings.slider_button_url }}">{{ block.settings.slider_button }}</a>
                </div>
              </div>
            </div>

            {% endfor %}
          </div>
        </div>


      </div>

    </div>
  </div>
</div>



<style>
 
 #slider-banner-area-{{ section.id }}.slider-banner-area{
    margin-top:{{ section.settings.section_margin_top }}px;
  }
  
  #slider-banner-area-{{ section.id }}.slider-banner-area{
    margin-bottom:{{ section.settings.section_margin_bottom }}px;
  }
  
</style> 

<script>


    /* Slider active */
    $(' #slider-banner-area-{{ section.id }} .slider-active').owlCarousel({
        loop: true,
        nav: true,
        autoplay: false,
        autoplayTimeout: 5000,
        animateOut: 'fadeOut',
        animateIn: 'fadeIn',
        navText: ['<i class="fa fa-angle-left"></i>', '<i class="fa fa-angle-right"></i>'],
        item: 1,
        responsive: {
            0: {
                items: 1
            },
            768: {
                items: 1
            },
            1000: {
                items: 1
            }
        }
    })
    
</script>


