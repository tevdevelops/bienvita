<div class="wishlist-section fix login-area pt-80 pb-80">
  <div class="container">
    <div class="customer-login fix account-page">
      {% if customer %}
      <div class="full-width-container wishlist-container">
        <!-- Hero Banner -->
        <div class="wishlist-hero mb-50">
          <h1 class="wishlist-hero--title">{{ page.title }}</h1>
        </div>
        <!-- Product Tile Grid -->
        <div class="wishlist-grid flex">
          {% for product in collections.all.products %}
          {% include 'wishlist-grid-item' %}
          {% endfor %}
          <div class="wishlist-grid--empty-list flex">
            <div class="empty-list--info">
              <h6 class="empty-list--text black">{{ settings.wishlist_empty_title }}</h6>
              <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
            </div>
          </div>
        </div>
        <!-- Loader -->
        <div class="wishlist-loader" style="dsiplay: none;">
          <p class="wishlist-loader--text">Loading...</p>
        </div>
      </div>
      {% else %}
      <div class="login-wishlist mb-30">
        <h2 class="mb-20">{{ settings.login_request_title }}</h2>
        <a class="custom-btn submit-btn-1 btn-hover-1" class="" href="/account/login">{{ 'layout.customer.log_in' | t }}</a>
      </div>
      {% endif %}
    </div>
  </div>
</div>
