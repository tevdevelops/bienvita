{% if paginate.pages > 1 %}
<div class="shop-pagination text-center">
  <nav class="pagination pagination-style">
    <ul class="">
      <li>
        {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" aria-label="Previous">
          <span aria-hidden="true"><i class="ion-ios-arrow-left"></i></span>
        </a>
      </li>
      {% else %}
      <li class="disabled prev">
        <a href="">
          <span><i class="ion-ios-arrow-left"></i></span>
        </a>
      </li>
      {% endif %}
      {% for part in paginate.parts %}
      {% if part.is_link %}
      <li>
        <a href="{{ part.url }}" title="">{{ part.title }}</a>
      </li>
      {% else %}
      {% if part.title == paginate.current_page %}
      <li class="active"><a href="">{{ part.title }}</a></li>
      {% else %}
      <li><a href="">{{ part.title }}</a></li>
      {% endif %}
      {% endif %}
      {% endfor %}
      {% if paginate.next %}
      <li class="next"><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}"><span aria-hidden="true"><i class="ion-ios-arrow-right"></i></span></a></li>
      {% else %}
      <li class="disabled next">
        <a href="">
          <span><i class="ion-ios-arrow-right"></i></span>
        </a>
      </li>
      {% endif %}
    </ul>
  </nav>
</div>
{% endif %}