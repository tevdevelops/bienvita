






<div class="single-blog-wrapper mb-80">
  <div class="blog-img mb-30">
    <a href="{{ article.url }}">
      <img src="{{ article | img_url : 'master' }}" alt="blog">
    </a>
  </div>
  <div class="blog-content">
    <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
    <div class="blog-date-categori">
      <ul>
        <li>{{ article.published_at | date: "%b, %d , %y" }}</li>
        <li><a href="#">{{ article.author }}</a></li>
      </ul>
    </div>
  </div>
  <p>
    {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
        {% else %}
        <!-- Decs -->
        {{ article.content | truncatewords: 30 }}
        {% endif %}
  </p>
  <div class="blog-btn-social mt-30">
    <div class="blog-btn">
      <a href="{{ article.url }}">read more</a>
    </div>
    <div class="blog-social">
      <span>share :</span>
      <ul>
        {% include 'social-icon-share-2' %}
        
      </ul>
    </div>
  </div>
</div>